{
  "editor.formatOnSave": true,

  // PHP форматирование
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer",
    "editor.formatOnSave": true
  },

  // ── Prettier / Twig ─────────────────────────────────────────────
  // Используем локальный Prettier из проекта (а не глобальный)
  "prettier.prettierPath": "./node_modules/prettier",
  "prettier.requireConfig": true,

  // Ассоциации и форматтеры
  "files.associations": { "*.twig": "twig" },
  "[twig]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Чтобы Alt не перехватывал меню (по желанию)
  "window.customMenuBarAltFocus": false,
  // ────────────────────────────────────────────────────────────────

  // PHP-CS-Fixer
  "php-cs-fixer.executablePath": "${workspaceFolder}/vendor/bin/php-cs-fixer",
  "php-cs-fixer.rules": "@Symfony",
  "php-cs-fixer.allowRisky": true,
  "php.validate.enable": false,
  "intelephense.environment.phpVersion": "8.3",

  // Автоисправления при сохранении
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },

  // Доверенная рабочая папка
  "security.workspace.trust.enabled": true,

  // Ваши подключения SQLTools (как было)
  "sqltools.connections": [
    {
      "mysqlOptions": { "authProtocol": "default", "enableSsl": "Disabled" },
      "ssh": "Disabled",
      "previewLimit": 50,
      "server": "127.0.0.1",
      "port": 3306,
      "driver": "MySQL",
      "name": "Symfony",
      "group": "Local",
      "database": "symfony",
      "username": "admin",
      "connectionTimeout": 30,
      "password": "pw"
    }
  ]
}

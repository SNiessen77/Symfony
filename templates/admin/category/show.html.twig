{% extends 'admin.html.twig' %}

{% block title %}
    Category
{% endblock %}

{% block body %}
    <div class="col-lg-6">
        <div class="ibox">
            <div class="ibox-title">
                <h1>
                    Category
                </h1>
            </div>
            <div class="ibox-content">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>
                                Id
                            </th>
                            <td>
                                {{ category.id }}
                            </td>
                        </tr>
                        <tr>
                            <th>
                                Name
                            </th>
                            <td>
                                {{ category.name }}
                            </td>
                        </tr>
                    </tbody>
                </table>
                <a class="btn btn-secondary btn-sm"
                    href="{{ path('app_admin_category_index') }}">
                    back to list
                </a>
            </div>
        </div>
    </div>
{% endblock %}

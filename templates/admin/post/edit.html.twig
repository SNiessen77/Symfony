{% extends 'admin.html.twig' %}

{% block title %}
    Edit Post
{% endblock %}

{% block body %}
    <div class="col-lg-6">
        <div class="ibox">
            <div class="ibox-title">
                <h1>
                    Edit Post
                </h1>
            </div>
            <div class="ibox-content">
                {# ФОРМА РЕДАКТИРОВАНИЯ #}
                {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="form-group row mt-3">
                    <div class="col-sm-4 col-sm-offset-2">
                        <a class="btn btn-white btn-sm"
                            href="{{ path('app_admin_post_index') }}">
                            back to list
                        </a>
                        <button class="btn btn-primary btn-sm" type="submit">
                            {{ button_label|default('Update') }}
                        </button>
                        {% if post is defined and post.id %}
                            {{
                                include(
                                    'admin/post/_delete_form.html.twig',
                                    {
                                        post: post
                                    }
                                )
                            }}
                        {% endif %}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

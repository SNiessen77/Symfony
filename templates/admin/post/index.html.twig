{% extends 'admin.html.twig' %}

{% block title %}
    Post index
{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h1>
                    Post index
                </h1>
                <a href="{{ path('app_admin_post_new') }}">Create new</a>
            </div>
            <form method="post" action="{{ path('app_admin_post_delete_selected') }}">
                <div class="my-pagination-wrapper">
                    {{ knp_pagination_render(posts) }}
                </div>
                <table class="table">
                    <colgroup>
                        <col style="width: 30px;">          {# Checkbox #}
                        <col style="width: 70px;">          {# Id #}
                        <col style="width: 10%;">           {# Name #}
                        <col style="width: 70%;">           {# Content #}
                        <col style="width: 5%;">            {# Category #}
                        <col style="width: 10%;">           {# PublishedAt #}
                        <col style="width: 5%;">            {# actions #}
                    </colgroup>
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="select-all">
                            </th>
                            <th>
                                Id
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Content
                            </th>
                            <th>
                                Category
                            <th>
                                PublischedAt
                            </th>
                            <th>
                                actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>
                                    <input type="checkbox" name="id[]" value="{{ post.id }}">
                                </td>
                                <td>
                                    {{ post.id }}
                                </td>
                                <td>
                                    {{ post.name }}
                                </td>
                                <td>
                                    {{ post.content }}
                                </td>
                                <td>
                                    {{ post.category
                                        ? post.category.name
                                        : '' }}
                                </td>
                                <td>
                                    {{ post.publischedAt
                                        ? post.publischedAt|date(
                                            'd.m.Y H:i',
                                            'Europe/Berlin'
                                        )
                                        : '' }}
                                </td>
                                <td>
                                    <a href="{{
                                        path(
                                            'app_admin_post_show',
                                            {
                                                id: post.id
                                            }
                                        )
                                        }}">
                                        show
                                    </a>
                                    <a href="{{
                                        path(
                                            'app_admin_post_edit',
                                            {
                                                id: post.id
                                            }
                                        )
                                        }}">
                                        edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">
                                    no records found
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="my-pagination-wrapper">
                    {{ knp_pagination_render(posts) }}
                </div>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete selected items?');">
                    DELETE SELECTED
                </button>
            </form>
        </div>
    </div>

    <script>
        document.getElementById('select-all').addEventListener('click', function(event) {
            const checkboxes = document.querySelectorAll('input[type="checkbox"][name="id[]"]:not(:disabled)');
            checkboxes.forEach(checkbox => {
                checkbox.checked = event.target.checked;
            });
        });
    </script>
{% endblock %}
